{
  "manifest_version": 3,
  "name": "CyberSec URL Grabber",
  "version": "1.0",
  "description": "Gets the URL of the active tab",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "system.display"],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["alert/alert.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
